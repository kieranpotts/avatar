{

  /* Vertical guidelines for line wrapping. */
  "editor.rulers": [
    80,
    100,
    120,
  ],

  /* Wrap long code lines at the viewport or 120 characters, whichever is
  narrowest. For documentation, wrap lines at the viewport edge. */
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  "[asciidoc]": {
    "editor.wordWrap": "on",
  },

  /* Enforce 2 spaces for indentation. */
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

}
